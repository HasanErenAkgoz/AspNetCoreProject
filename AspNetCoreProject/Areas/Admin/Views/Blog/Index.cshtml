@using Entity.Concrate
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">

                            <div>
                                <img src="@item.ThumbnailImage" height="225" width="275" />
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)item.CreateDate).ToString("dd MMMM yyyy"))
                                </span>
                                <small class="text-muted">@item.Category.Name</small>
                                <a href="/Blog/BlogReadAll/@item.Id" class="product-name"> @item.Title</a>



                                <div class="small m-t-xs">
                                    @if (item.Content.Length > 100)
                                    {
                                        @item.Content.Substring(0, item.Content.Substring(0, 100).LastIndexOf(" "))

                                    }
                                </div>
                                <div class="m-t text-righ">
                                    <a href="/Blog/BlogReadAll/@item.Id" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
