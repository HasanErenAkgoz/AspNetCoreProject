@using Entity.Concrate
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    string color = "";
}

<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Başlık</th>
                                    <th>Blog</th>
                                    <th>Puan</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.BlogScore == 0)
                                    {
                                        color = "text-danger";
                                    }
                                    if (item.BlogScore == 1)
                                    {
                                        color = "text-danger";
                                    }
                                    if (item.BlogScore == 2)
                                    {
                                        color = "text-danger";
                                    }
                                    if (item.BlogScore == 3)
                                    {
                                        color = "text-danger";
                                    }
                                    if (item.BlogScore == 4)
                                    {
                                        color = "text-warning";
                                    }
                                    if (item.BlogScore == 5)
                                    {
                                        color = "text-warning";
                                    }
                                    if (item.BlogScore == 6)
                                    {
                                        color = "text-warning";
                                    }
                                    if (item.BlogScore == 7)
                                    {
                                        color = "text-success";
                                    }
                                    if (item.BlogScore == 8)
                                    {
                                        color = "text-success";
                                    }
                                    if (item.BlogScore == 9)
                                    {
                                        color = "text-navy";
                                    }
                                    if (item.BlogScore == 10)
                                    {
                                        color = "text-navy";
                                    }
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.UserName</td>
                                        <td>@item.Title</td>
                                        <td>@item.Blog.Title</td>
                                        <td class="@color"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
                                        <td><span class="pie"></span>@(((DateTime)item.Date).ToString("dd MMMM yyyy"))</td>
                                        <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
