@using Entity.Concrate
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Roller</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach(var item in Model)
                               {
                                   <tr>
                                       <td>@item.Id</td>
                                       <td>@item.Name</td>
                                       <td><a href="~/Admin/Role/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                       <td><a href="~/Admin/Role/Update/@item.Id" class="btn btn-warning">Güncelle</a></td>
                                   </tr>
                               }
                            </tbody>
                        </table>
                        <a href="~/Admin/Role/Add" class="btn btn-outline-primary">Yeni Rol Ekle</a>
                        <a href="~/Admin/Role/UserRoleList" class="btn btn-outline-success">Kullanıcı Rol Listesi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

