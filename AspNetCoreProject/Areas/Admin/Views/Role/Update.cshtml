@using AspNetCoreProject.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Role Düzenleme Sayfası</h1>
<br />
<form method="post">
    <div class="form-group">
        <label>Role Id</label>
        <input type="number" name="Id" value="@Model.Id" disabled class="form-control"/>
    </div>
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <button class="btn btn-warning">Rol Güncelle</button>
</form>

