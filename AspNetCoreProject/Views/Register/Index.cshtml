@model Entity.Concrate.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<!DOCTYPE html>
<html lang="zxx">
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<body>

    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Yazar Kayıt Sayfası</h3>
            <div class="inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationCustom01">Adınız-Soyadınız</label>
                                @Html.TextBoxFor(writer=>writer.Name,new {@class="form-control", required = "" })
                                @Html.ValidationMessageFor(writer=>writer.Name,"", new { @class = "text text-danger" })

                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="validationCustom02">Email Adresiniz</label>
                                @Html.TextBoxFor(writer => writer.Mail, new { @class = "form-control", required = "" })
                                @Html.ValidationMessageFor(writer => writer.Mail,"", new { @class = "text text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                                @Html.PasswordFor(writer => writer.Password, new { @class = "form-control", @required = "" })
                                @Html.ValidationMessageFor(writer => writer.Password, "", new { @class = "text text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword1 mb-2">Şifre Tekrarı</label>
                                <input type="password" name="PasswordAgain"  class="form-control" id="password2" placeholder="Şifrenizi Tekrar Giriniz" required="" />
                                @Html.ValidationSummary()
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Lütfen Resminizi Seçiniz</label>
                                <input type="file" name="Image" />
                                @Html.ValidationMessageFor(writer => writer.Image, "", new { @class = "text text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                <label for="exampleInputPassword2 mb-2">Hakkınızda</label>
                                @Html.TextBoxFor(writer => writer.About, new { @class = "form-control", required = "" })
                                @Html.ValidationMessageFor(writer => writer.Image, "", new { @class = "text text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustom01 mb-2">Şehir</label>
                                @Html.DropDownListFor(x => x.City, (List<SelectListItem>)ViewBag.Cities, new { @class = "form-control dropdown" })
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                        <p>
                            <a href="#" id="btn1">Tüm şartları okudum ve kabul ediyorum.</a>
                        </p>
                    }
                </div>
            </div>
        </div>
        <br />
        <script>
            $('#btn1').click(function () {
                swal("Üyelik Şartları","Sitemize Verdiğiniz Mail Adresi Üzerinden Bilgi ve Haber E-postaları Spam Ölçüsüne Varmadan Gönderilmeye Devam Edilecektir. Eğer E-posta Bülteninden Çıkmak İsterseniz Mail İleti Dizesini Durdurabilirsiniz.");
            });
        </script>
    </section>
</body>

</html>
