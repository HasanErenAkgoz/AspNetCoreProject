@model IEnumerable<Entity.Concrate.Comment>

<div class="comment-top">
    
    @if (Model.Count()==0)
    {
        <h3>Şuan mevcut yorum yok. İlk yorumu sen yapmak ister misin?</h3>
    }
    else
    @foreach (var item in Model)
    {
        
        <div class="media">
            <img src="~/Themes/coreBlogTheme/images/t1.jpg" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.UserName</h5>
                <p><strong>
                    @item.Content
                    </strong>
                </p>
            </div>
            
        </div>
        <br />
    }
    </div>